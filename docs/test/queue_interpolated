#Run the following sequence
echo Running the DFT scf calculation ...
mpirun -np 4 $QE530/bin/pw.x < scf.in > scf.out
echo Running the DFT non-scf calculation ...
mpirun -np 4 $QE530/bin/pw.x < nscf.in > nscf.out
echo Projecting the wavefunctions onto atomic orbitals ...
mpirun -np 4 $QE530/bin/projwfc.x < proj.in > proj.out
